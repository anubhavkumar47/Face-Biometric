<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    tools:context=".ui.login.SignUpFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="150dp"
                        android:id="@+id/logo_company"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/facebiometric_logo"
                        android:layout_height="150dp"/>

                    <!-- Register Title -->
                    <TextView
                        android:id="@+id/tvRegisterTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/adlam_display"
                        android:text="Register"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/textColorBlack"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        />

                    <!-- Subtitle -->
                    <TextView
                        android:id="@+id/tvSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/adlam_display"
                        android:text="Welcome! Please fill in your credentials"
                        android:textColor="@color/textColorLight"
                        android:textSize="14sp"
                        />
                    <!-- Full Name -->
                    <EditText
                        android:id="@+id/etBranchID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Branch ID*"
                        android:textColor="@color/textColorBlack"
                        android:background="@android:drawable/edit_text"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:padding="12dp"
                        android:inputType="textNoSuggestions"
                        android:importantForAutofill="noExcludeDescendants"
                        android:autofillHints=""
                        android:layout_marginTop="30dp"/>
                    <!-- Full Name -->
                    <EditText
                        android:id="@+id/etEmpID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Employee ID*"
                        android:textColor="@color/textColorBlack"
                        android:background="@android:drawable/edit_text"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:padding="12dp"
                        android:inputType="textNoSuggestions"
                        android:importantForAutofill="noExcludeDescendants"
                        android:autofillHints=""
                        android:layout_marginTop="30dp"/>

                    <!-- Full Name -->
                    <EditText
                        android:id="@+id/etFullName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Full Name*"
                        android:textColor="@color/textColorBlack"
                        android:background="@android:drawable/edit_text"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:padding="12dp"
                        android:inputType="textNoSuggestions"
                        android:importantForAutofill="noExcludeDescendants"
                        android:autofillHints=""
                        android:layout_marginTop="30dp"/>

                    <!-- Email -->
                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email*"
                        android:inputType="textNoSuggestions"
                        android:importantForAutofill="noExcludeDescendants"
                        android:autofillHints=""
                        android:textColor="@color/textColorBlack"
                        android:background="@android:drawable/edit_text"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:padding="12dp"
                        android:layout_marginTop="20dp"/>



                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password*"
                        android:inputType="textPassword"
                        android:drawableEnd="@drawable/eye_close"
                        android:textColor="@color/textColorBlack"
                        android:background="@android:drawable/edit_text"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:padding="12dp"
                        android:layout_marginTop="20dp"/>

                    <!-- Confirm Password -->
                    <EditText
                        android:id="@+id/etConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Conform Password*"
                        android:inputType="textPassword"
                        android:drawableEnd="@drawable/eye_close"
                        android:textColor="@color/textColorBlack"
                        android:background="@android:drawable/edit_text"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:padding="12dp"
                        android:layout_marginTop="20dp"/>

                    <Spinner
                        android:id="@+id/spinnerDepartment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:background="@android:drawable/edit_text"
                        android:layout_marginEnd="20dp"
                        android:padding="12dp"
                        />

                    <!-- Destination Dropdown -->
                    <Spinner
                        android:id="@+id/spinnerDestination"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:background="@android:drawable/edit_text"
                        android:layout_marginEnd="20dp"
                        android:padding="12dp"
                        />



                    <!-- Scan Face Button -->
                    <Button
                        android:id="@+id/btnScanFace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.Material3.Button.ElevatedButton"
                        android:text="Scan Face ID"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:elevation="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        app:iconPadding="0dp"
                        app:icon="@drawable/face_recognition"
                        android:textStyle="bold"
                        android:fontFamily="@font/adlam_display"
                        android:textSize="16sp"
                        android:textColor="@color/textColorBlack"
                        android:layout_marginTop="20dp"/>

                    <!-- Password -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/checkBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="5dp"
                            android:text="Accept Term &amp; Condition" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textStyle="normal"
                            android:textColor="@color/dark_blue"
                            android:textSize="16sp"
                            android:layout_marginStart="20dp"
                            android:id="@+id/termAndCOn"
                            android:text="Term &amp; Condition"/>
                    </LinearLayout>

                    <!-- Sign Up Button -->
                    <Button
                        android:id="@+id/btnSignUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sign Up"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:elevation="10dp"
                        android:textStyle="bold"
                        android:backgroundTint="@color/buttonColor"
                        android:fontFamily="@font/adlam_display"
                        android:textSize="16sp"
                        android:textColor="@color/textColorWhite"
                        android:layout_marginTop="20dp"/>

                    <!-- Already have an account? -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Already have an account ? "
                            android:textColor="@color/textColorLight"
                            android:textSize="14sp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="20dp"
                            android:fontFamily="@font/adlam_display"/>

                        <TextView
                            android:id="@+id/tvLogin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:fontFamily="@font/adlam_display"
                            android:text="SIGN IN "
                            android:textColor="@color/textColorBlue"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

            <!-- Blur Effect -->

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@android:color/transparent"
                android:alpha="0.8"
                android:elevation="10dp"/>

        </FrameLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>